      <td>
        <table border ="1">
        <tr><td><%#= course.name %></td></tr>
        <tr>
          <td>Holes</td>
          <% j = 1 %>
          <% while j < 10 do %>
          <td> <%= j %> </td>
          <% j+=1 %>
          <% end %>

          <% if i==1%>
            <td>OUT</td>
          <% else %>
            <td>IN</td>
            <td>TOTAL </td>
          <% end %>
        </tr>
        <tr>      
          <% @tees.each do |tee| %>
            <td>
              <tr>
                <td><%= tee.name %></td>
                <% distance = 0 %>
                <% @holes = Hole.where(tee_id: tee.id)%>
                <% @holes.each do |hole| %>
                  <td> <%= hole.distance %> </td>
                  <% distance += hole.distance %>
                <% end %>
                <td> <%= distance %> </td>
              </tr>
            </td>
          <% end %>
        </tr>
        </table>
      </td>
    <% i+=1 %>  
  <% end %>
  </tr>
</table>


